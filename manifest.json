{
    "manifest_version": 2,
    "name": "YouTube Downloader",
    "version": "0.1.0",
    "permissions": [
        "tabs"
    ],
    "page_action": {
        "default_title": "YouTube Download",
        "default_icon": "icon.png",
        "show_matches": [
            "*://*.youtube.com/watch?v=*"
        ]
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
